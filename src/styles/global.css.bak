@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply min-h-screen flex flex-col bg-white text-gray-900 antialiased;
  }
}
}

@layer components {
  .btn-primary {
    @apply inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gradient-to-r from-purple-600 to-purple-500 hover:from-purple-500 hover:to-purple-400 transition-colors shadow-sm hover:shadow focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500;
  }
  
  .btn-secondary {
    @apply inline-flex items-center px-4 py-2 border border-gray-200 text-sm font-medium rounded-full text-gray-600 hover:text-purple-600 hover:border-purple-600 transition-all focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500;
  }
  
  .input {
    @apply flex h-10 w-full rounded-lg border border-gray-200 bg-white px-3 py-2 text-sm ring-offset-white file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-gray-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-purple-500 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50;
  }
  
  .card {
    @apply rounded-lg border border-gray-200 bg-white text-gray-900 shadow-sm hover:shadow transition-shadow;
  }
  
  .badge {
    @apply inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2;
  }
  
  .badge-primary {
    @apply bg-purple-100 text-purple-800;
  }
  
  .badge-secondary {
    @apply bg-gray-100 text-gray-800;
  }
}